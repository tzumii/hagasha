@page "/7boom"
<PageTitle>7Boom</PageTitle>
<h1>7boom</h1>
<link rel="stylesheet" href="style.css" />
<span class="container">
    <table>
        @for (int i = 1; i <= 100; i++)
        {
            <td>
                @if (i % 10 == 7 || i / 10 == 7 || i % 7 == 0)
                {
                    Random random = new Random();
                    int x = random.Next(1, 4);
                    if (x == 1)
                    {
                        <img src="imgs/boom1.png" width="50" />
                    }
                    if(x == 2)
                    {
                        <img src="imgs/boom2.png" width="50" />
                    }
                    if(x == 3)
                    {
                        <img src="imgs/boom3.png" width="50" />
                    }
                }
                else
                {
                    <span>
                        @i
                    </span>
                }
            </td>
            @if (i % 10 == 0)
            {
                <tr></tr>
            }
        }
    </table>
</span>
